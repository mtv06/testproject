<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.springboot.test.Model.User" table="user">
        <meta attribute="class-description">This class contains user details.</meta>
        <id name="id" type="java.lang.Integer" column="id">
            <generator class="native" />
        </id>
        <property column="nameF" name="nameF" type="java.lang.String"/>
        <property column="nameI" name="nameI" type="java.lang.String"/>
        <property column="nameO" name="nameO" type="java.lang.String"/>
        <property column="login" name="login" type="java.lang.String"/>
        <property column="pass" name="pass" type="java.lang.String"/>
        <set name="userDisks" table="takenitem" cascade="all">
            <key column="idUser" />
            <many-to-many column="idDisk" unique="true" class="ru.springboot.test.Model.Disk" />
        </set>
    </class>
</hibernate-mapping>